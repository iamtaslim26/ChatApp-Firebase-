<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
    tools:context=".ForgotPasswordActivity">


        <TextView
            android:id="@+id/just_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="After Entering the proper Email Id You will get a link in your email,
then click on that link and enter the the new password "
            android:textSize="25dp"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="center"
            android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/reset_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/just_text"
        android:layout_marginTop="30dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:drawableStart="@drawable/email"
        android:hint="Email Id. . . .. "/>

    <Button
        android:id="@+id/reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_email_id"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Reset Password"
        android:padding="8dp"
        android:background="@drawable/inputs"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>